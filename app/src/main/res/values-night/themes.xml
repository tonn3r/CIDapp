<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark mode. -->
    <style name="Base.Theme.CIDapp2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Dark Theme Colors -->
        <item name="colorPrimary">@color/m3_dark_primary</item>
        <item name="colorOnPrimary">@color/m3_dark_on_primary</item>
        <item name="colorPrimaryContainer">@color/m3_dark_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/m3_dark_on_primary_container</item>

        <item name="colorSecondary">@color/m3_dark_secondary</item>
        <item name="colorOnSecondary">@color/m3_dark_on_secondary</item>
        <item name="colorSecondaryContainer">@color/m3_dark_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/m3_dark_on_secondary_container</item>

        <item name="colorTertiary">@color/m3_dark_tertiary</item>
        <item name="colorOnTertiary">@color/m3_dark_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/m3_dark_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/m3_dark_on_tertiary_container</item>

        <item name="colorError">@color/m3_dark_error</item>
        <item name="colorOnError">@color/m3_dark_on_error</item>
        <item name="colorErrorContainer">@color/m3_dark_error_container</item>
        <item name="colorOnErrorContainer">@color/m3_dark_on_error_container</item>

        <item name="android:colorBackground">@color/m3_dark_background</item>
        <item name="colorOnBackground">@color/m3_dark_on_background</item>

        <item name="colorSurface">@color/m3_dark_surface</item>
        <item name="colorOnSurface">@color/m3_dark_on_surface</item>
        <item name="colorSurfaceVariant">@color/m3_dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/m3_dark_on_surface_variant</item>

        <item name="colorOutline">@color/m3_dark_outline</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>